<script>
    var currentDate = new Date();

    function date(date) {
        if (date < currentDate) {
            document.getElementById("tt").innerHTML = "Còn hạn";
        } else if (date > currentDate) {
            document.getElementById("tt").innerHTML = "Hết hạn";
        }
    }
</script>
